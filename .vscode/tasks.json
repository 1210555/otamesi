{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "C++: Build with SFML",
      "command": "g++",
      "args": [
        "-g",
        "MyMineSweeper.cpp",
        "-o",
        "MyMineSweeper.exe",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
