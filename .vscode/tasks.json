{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build MyMineSweeper with SFML",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "MyMineSweeper.cpp",
        "-o",
        "MyMineSweeper",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
